{
  "extends": ["config:base"],
  "automerge": true,
  "ignoreDeps": [
    "@misk/cli",
    "@misk/common",
    "@misk/core",
    "@misk/dev",
    "@misk/prettier",
    "@misk/simpleredux",
    "@misk/test"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/tests/**"
  ],
  "stabilityDays": 3,
  "postUpgradeTasks": {
    "commands": [
      "node common/scripts/install-run-rush.js update"
    ],
    "fileFilters": [
      "common/config/rush/pnpm-lock.yaml"
    ]
  },
  "allowedPostUpgradeCommands": [
    "node common/scripts/install-run-rush.js update"
  ]
}
